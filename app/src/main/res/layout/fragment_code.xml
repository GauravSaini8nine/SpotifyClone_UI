<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp" >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your code"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="7.2"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_text_back"
                android:layout_margin="5dp"

                android:text="4"
                android:gravity="center"
                android:layout_weight="1.2"
                android:textSize="25dp"
                android:padding="10dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_text_back"
                android:layout_margin="5dp"
                android:text="4"
                android:gravity="center"

                android:layout_weight="1.2"

                android:textSize="25dp"
                android:padding="10dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_text_back"
                android:layout_margin="5dp"
                android:text="4"
                android:layout_weight="1.2"
                android:gravity="center"

                android:textSize="25dp"
                android:padding="10dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_text_back"
                android:layout_margin="5dp"
                android:text="4"
                android:layout_weight="1.2"
                android:gravity="center"

                android:textSize="25dp"
                android:padding="10dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_text_back"
                android:layout_margin="5dp"
                android:text="4"
                android:layout_weight="1.2"
                android:gravity="center"

                android:textSize="25dp"
                android:padding="10dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_text_back"
                android:layout_margin="5dp"
                android:text="4"
                android:layout_weight="1.2"
                android:gravity="center"

                android:textSize="25dp"
                android:padding="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/NumberSLider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#131313"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We'll send you a code by SMS to confirm your phone number."
                android:padding="5dp"/>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:id="@+id/btn_number_next"
                android:layout_margin="20dp"
                android:background="@drawable/black_button"
                android:text="Next" />



        </LinearLayout>


    </LinearLayout>





</RelativeLayout>