<!--            android:layout_height="match_parent"-->
<!--            app:defaultNavHost="true"-->
<!--            app:navGraph="@navigation/navigate"-->
<!--            tools:layout="@layout/fragment_main_screen"/>-->


<ImageView
    android:id="@+id/signup_logo_white"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="15dp"
    android:layout_weight="1"
    android:src="@drawable/spotifywhite"
    app:layout_constraintBottom_toTopOf="@+id/guideline"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

<TextView
    android:id="@+id/signup_center_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_weight="2"
    android:gravity="center_horizontal"
    android:text="Millions of songs.\n Free on Spotify."
    android:textColor="@color/white"
    android:textSize="35dp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/guideline" />

<LinearLayout
    android:id="@+id/l_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="25dp"


    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnsign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/sign_up_background"
        android:text="Sign up free"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:background="@drawable/mainscreenbuttons"
        android:drawableLeft="@drawable/ic_smartphone"
        android:paddingLeft="10dp"
        android:text="Continue with Phone number"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"

        tools:layout_editor_absoluteX="30dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btngoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/mainscreenbuttons"
        android:drawableLeft="@drawable/ic_google"
        android:padding="10dp"
        android:text="Continue with Google"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="15dp"

        tools:layout_editor_absoluteX="30dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnfacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:background="@drawable/mainscreenbuttons"
        android:drawableLeft="@drawable/ic_facebook__1_"
        android:padding="10dp"
        android:text="Continue with Facebook"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="30dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp" />

</LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>